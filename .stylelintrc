{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": ["tab", {
      "except": ["value"]
    }],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes"]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "number-leading-zero": "always",
    "selector-pseudo-element-colon-notation": "single"
  }
}
